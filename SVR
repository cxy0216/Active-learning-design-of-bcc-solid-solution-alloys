import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.model_selection import KFold, cross_val_predict
from sklearn.metrics import mean_squared_error, r2_score
from sklearn.svm import SVR
from sklearn.preprocessing import StandardScaler
from bayes_opt import BayesianOptimization

file_path = r'/content/yield_strength.xlsx'
data = pd.read_excel(file_path)
data = data.dropna()

X = data.iloc[:, 1:-1]
y = data.iloc[:, -1]

scaler = StandardScaler()
X = scaler.fit_transform(X)

def train_model(C, epsilon):
    params = {
        'C': C,
        'epsilon': epsilon,
        'kernel': 'rbf'
    }
    model = SVR(**params)
    kf = KFold(n_splits=5, shuffle=True, random_state=42)
    y_pred = cross_val_predict(model, X, y, cv=kf)
    rmse = np.sqrt(mean_squared_error(y, y_pred))
    r2 = r2_score(y, y_pred)
    return -rmse

bounds = {
    'C': (1, 10000),
    'epsilon': (0.01, 100)
}

optimizer = BayesianOptimization(
    f=train_model,
    pbounds=bounds,
    random_state=42,
)

optimizer.maximize(init_points=10, n_iter=100)

results_df = pd.DataFrame([{
    'target': res['target'],
    **res['params']
} for res in optimizer.res])

results_df = results_df.sort_values(by='target', ascending=False)
results_df.to_excel('SVR_optimization_results.xlsx', index=False)

best_params = optimizer.max['params']
best_model = SVR(
    C=best_params['C'],
    epsilon=best_params['epsilon'],
    kernel='rbf'
)

kf = KFold(n_splits=5, shuffle=True, random_state=42)
y_pred = cross_val_predict(best_model, X, y, cv=kf)

rmse = np.sqrt(mean_squared_error(y, y_pred))
r2 = r2_score(y, y_pred)

plt.figure(figsize=(6,6))
plt.scatter(y, y_pred, alpha=0.7)
plt.plot([y.min(), y.max()], [y.min(), y.max()], 'r--')
plt.xlabel("True Yield Strength")
plt.ylabel("Predicted Yield Strength")
plt.title("5-Fold CV: Predicted vs True Yield Strength (Optimized)")
plt.grid(True)
plt.tight_layout()
plt.show()
